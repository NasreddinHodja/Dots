#!/usr/bin/env bash

theme_str='
window {
    width: 230px;
    height: 290px;
}

element {
    children: [element-text];
    padding: 8px 12px 8px 18px;
}

textbox-prompt-colon {
    expand:     false;
    str:        "êìè";
    margin:     0px 0.3em 0em 0em;
    text-color: @red;
}

listview {
    lines: 5;
}
'

CHOICE=$(echo -e "Û∞ê•  Shutdown\nÛ∞úâ  Reboot\nÛ∞åæ  Lock\nÛ∞í≤  Sleep\nÛ∞çÉ  Log out" | \
    rofi -dmenu -i -p "" -theme-str "$theme_str")

case $CHOICE in
    *"Shutdown") systemctl poweroff ;;
    *"Reboot") systemctl reboot ;;
    *"Lock") loginctl lock-session ;;
    *"Sleep") systemctl suspend ;;
    *"Log out") loginctl terminate-session $XDG_SESSION_ID ;;
    "") ;;
    *) exit 1 ;;
esac
