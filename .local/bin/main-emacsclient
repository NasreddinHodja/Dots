#!/bin/bash

if [ -n "$*" ]; then
    /usr/bin/emacsclient --alternate-editor= --display="$DISPLAY" --frame-parameters="((width . 120) (height . 45) (left . 2272) (top . 0) (fullscreen . fullheight))" "$@" &

else
    /usr/bin/emacsclient --alternate-editor= --create-frame --frame-parameters="((width . 120) (height . 45) (left . 2272) (top . 0) (fullscreen . fullheight))" &
fi

sleep 0.8

center-window
